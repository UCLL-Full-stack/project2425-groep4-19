generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Todo username unique and email unique
//Todo role as class?
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  password  String
  role      String
  organisationId Int?
  organisation Organisation? @relation(fields: [organisationId], references: [id])
}

model StockItem {
    id      Int     @id @default(autoincrement())
    name    String
    quantity    Int
    organisationId Int?
    organisation Organisation? @relation(fields: [organisationId], references: [id])
}

//Todo name unique?
model Organisation {
    id      Int     @id @default(autoincrement())
    name    String
    users  User[]
    stockItems StockItem[]
}
